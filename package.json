{
    "name": "ts-template",
    "version": "0.0.1",
    "description": "Typescript Project starting template",
    "main": "index.js",
    "scripts": {
        "clean": "rimraf dist",
        "build": "concurrently npm:clean npm:build:*",
        "build:js": "npm run ts src/build.ts",
        "build:types": "tsc -p tsconfig-build.json --emitDeclarationOnly",
        "watch:build:js": "npm run ts src/build.ts -- --watch",
        "watch:build:types": "tsc -p tsconfig-build.json --emitDeclarationOnly --watch --preserveWatchOutput",
        "new": "plop --plopfile templates/plopfile.js",
        "new:module": "plop --plopfile templates/plopfile.js module",
        "start": "concurrently npm:watch:*",
        "test": "jest",
        "watch:test": "jest --watchAll",
        "lint": "eslint src/*",
        "ts": "node -r esbuild-register"
    },
    "author": "Kevin LaFlamme",
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-typescript": "^7.16.0",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "@types/yargs": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "chokidar": "^3.5.3",
        "concurrently": "^7.0.0",
        "esbuild": "^0.15.15",
        "esbuild-register": "^3.3.2",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "globby": "^13.1.0",
        "jest": "^29.3.1",
        "plop": "^3.1.1",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.3",
        "ts-pattern": "^4.0.6",
        "typescript": "^4.5.3",
        "yargs": "^17.3.1"
    }
}
